<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>

        <td><%= message.title %></td>
        <td><%= message.description %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', message, class: "btn btn-info" %></td>
          <% if message.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_message_path(message), class: "btn btn-success "%></td>
            <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <% end %>

        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
