<h1>Edit Comment</h1>
<%= simple_form_for([@message, @comment]) do |f| %>
  <div class="form-group">

    <%= f.input :content, label: "Comments", class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Back", message_path(@message), class: "btn btn-info" %>
  </div>
<% end %>
